<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="website icon" type="png" href="images/brandmark@2x-8.png" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/productCard.css" />
    <title>Product Card</title>
</head>
<body>
  <%- include("partials/header.ejs", { user: user }) %>
  <h1 class="section-title">Editar Productos</h1>
  <section class="product-section">
  <% products.forEach(product => { %> 
          <article class="product-card">
            <img src="/images/<%= product.image %>" alt="Producto" class="product-image">
            <div class="product-details">
              <h2 class="product-name"> <%= product.name %></h2>
              <div class="product-text">
                <p class="product-price">$ <%= product.price %> </p>
                <p class="product-description"> <%= product.description %> </p>
              </div>
            </div>
            <div class="button-container">
                <a href="/products/<%= product.id %>/edit" class="action-button edit">Editar producto</a>
                <form action="/products/<%= product.id %>?_method=DELETE" method="POST">
                    <button type="submit" class="action-button delete">Eliminar</button>
                </form>
            </div>
          </article>
          <% }) %>
        </section>
        <%- include("partials/footer.ejs") %>
</html>

