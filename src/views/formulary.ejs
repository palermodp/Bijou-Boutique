<!DOCTYPE html>
<html lang="es">
  <head>
    <link rel="website icon" type="png" href="images/brandmark@2x-8.png" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bijou Boutique</title>
    <link rel="stylesheet" href="/css/formulary.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />
    <script src="../../js/createProduct.js"></script>
  </head>
  <body>
    <%- include("partials/header.ejs", { user: user }) %>
    <h1 class="section-title">Añadir Productos</h1>
    <form action="/products/create" method="POST" enctype="multipart/form-data">
      <div class="form-container">
        <div class="form-group">
          <label for="name">Nombre del producto</label>
          <input type="text" class="form-control" id="name" name="name" required />
          <% if (errors && errors.name) { %>
          <div class="error-message"><%= errors.name.msg %></div>
          <% } %>
        </div>
        
        <div class="form-group">
          <label for="description">Descripción</label>
          <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
          <% if (errors && errors.description) { %>
          <div class="error-message"><%= errors.description.msg %></div>
          <% } %>
        </div>

        <div class="form-group">
          <label for="image">Imagen</label>
          <input type="file" class="form-control" id="image" name="image" />
          <% if (errors && errors.image) { %>
          <div class="error-message"><%= errors.image.msg %></div>
          <% } %>
        </div>

        <div class="form-group">
          <label for="color">Colores</label>
          <input type="text" class="form-control" id="color" name="color" placeholder="Ejemplo: negro, blanco, rojo" />
          <% if (errors && errors.color) { %>
          <div class="error-message"><%= errors.color.msg %></div>
          <% } %>
        </div>

        <div class="form-group">
          <label for="price">Precio</label>
          <input type="number" class="form-control" id="price" name="price" step="0.01" required />
          <% if (errors && errors.price) { %>
          <div class="error-message"><%= errors.price.msg %></div>
          <% } %>
        </div>

        <button type="submit" class="submit-button">Guardar Producto</button>
      </div>
    </form>
    <%- include("partials/footer.ejs") %>
  </body>
</html>
